<!-- Head Component -->
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if page.title %}{{ page.title }} | {% endif %}{% if include.title_suffix %}{{ include.title_suffix }}{% else %}{{ site.title }}{% endif %}</title>
  <meta name="description" content="{% if page.description %}{{ page.description }}{% else %}{{ site.description }}{% endif %}">
  
  <!-- SEO and Open Graph tags -->
  {% seo %}
  
  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/_bridgetown/static/css/index.css' | relative_url }}">
  <!-- Charts.css for data visualization -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/charts.css/dist/charts.min.css">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="{{ '/favicon.ico' | relative_url }}">
  
  <!-- Sitemap -->
  <link rel="sitemap" type="application/xml" title="Sitemap" href="{{ '/sitemap.xml' | relative_url }}">
  
  <!-- JavaScript -->
  <script defer src="{{ '/_bridgetown/static/js/index.js' | relative_url }}"></script>
  
  <!-- GitHub buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  
  <!-- Structured Data -->
  {% render "structured_data" %}
</head>